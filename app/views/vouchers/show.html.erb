<% provide(:title, @voucher.title) %>
<div class="container vouchers">
    <div class="row">
        <div class="col-12">
          <p id="notice"><%= notice %></p>
          
          <h1> <%= @voucher.title %></h1>
          
          <p>
            <strong>Description:</strong>
            <%= @voucher.description %>
          </p>
          
          <p>
            <strong>Price:</strong>
           <%= number_to_currency(@voucher.price, :unit => "â‚¬") %>
          </p>
          
          <a href="/cart/<%= @voucher.id %>" class="button">Add To Cart</a>
          
          <% if session[:login] == 1 && current_user.admin === false %> 
          <%= link_to 'Edit', edit_voucher_path(@voucher) %> |
          <% end %>
          <%= link_to 'Back', vouchers_path %>
    </div>
  </div>
</div>