<h2>You Searched Our Product Catalog For <%= @search_term %></h2>

<% if @vouchers.length == 0  %>
<br />
<h2>No products were found to match your search</h2>
<% end %>


<table class="catalog">
  <% @vouchers.each do |voucher| %>
      <tr>
        <td>
          <div class="image">
            <%= link_to (image_tag voucher.image_url, :style => "height:100px"), voucher %>
          </div>
          <div class="title">
            <%= link_to voucher.title, voucher %>
          </div>
          <div class="description">
            <%= voucher.description %>
          </div>  
          <div class="price">
             <%= number_to_currency(voucher.price, :unit => "â‚¬") %>
          </div>
          <div class="links">
            <% if user_signed_in? %>
              <%= link_to 'Edit', edit_voucher_path(voucher) %>
              <%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%else%>
            
              <a href="/cart/<%= voucher.id %>">Add to Cart</a>
            <%end%>  
        </div>
        </td>
      </tr>
    <% end %>
</table>
